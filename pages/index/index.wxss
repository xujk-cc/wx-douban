/**index.wxss**/
.index-banner{
  height:300rpx;
  margin-bottom:20rpx;
  background:#fff;
}
.index-banner image{
  display:block;
  width:100%;
  height:100%;
}

.index-list{
  margin-bottom:20rpx;
  background:#fff;
}
.index-list .loading{
  height:420rpx;
}
.index-list .errorTips{
  height:340rpx;
}
.index-list .title{
  display:block;
  margin:0 20rpx;
  height:32rpx;
  line-height:34rpx;
  padding:16rpx 0;
  font-size:32rpx;
  font-weight:bold;
  color:#333;
}
.index-list .title:before{
  content:'';
  float:left;
  width:10rpx;
  height:32rpx;
  margin-right:20rpx;
  background:#2aac5e;
}
.index-list .list{
  white-space:nowrap;
}
.index-list .list .listItem{
  display:inline-block;
  width:33.3333%;
  margin-right:20rpx;
  height:420rpx;
}
.index-list .list .listItem:first-child{
  margin-left:20rpx;
}
.index-list .list .listItem image{
  width:100%;
  height:360rpx;
}
.index-list .list .listItem text{
  display:block;
  height:32rpx;
  line-height:34rpx;
  overflow:hidden;
  text-overflow:ellipsis;
  white-space: nowrap;
  font-size:28rpx;
  color:#666;
  font-weight:normal;
}